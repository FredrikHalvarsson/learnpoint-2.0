@model learnpoint_2._0.Models.Course

@{
    ViewData["Title"] = "Details";
}

<h1>@Model.CourseName</h1>

<div>
    <h4>Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Teachers
        </dt>
        <dd class="col-sm-10">
            @foreach (var teacher in Model.Teachers)
            {
                <p>@teacher.Teacher.TeacherName</p>
            }
        </dd>
        <dt class="col-sm-2">
            Class
        </dt>
        <dt class="col-sm-10">
            Students
        </dt>
        @foreach (var sClass in Model.Classes)
        {
            <dd class="col-sm-2">@sClass.SchoolClass.ClassTitle</dd>
            <dd class="col-sm-10">
                @foreach (var student in sClass.SchoolClass.Students)
                {
                    <p>@student.StudentName</p>
                }
            </dd>
            <br/>
        }
        <dd class="col-sm-10">
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.CourseId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
