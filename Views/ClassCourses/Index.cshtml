@model IEnumerable<learnpoint_2._0.Models.ClassCourses>

@{
    ViewData["Title"] = "Index";
}

<h1>Class courses</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SchoolClass)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SchoolClass.ClassTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course.CourseName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ClassCourseId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ClassCourseId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ClassCourseId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
