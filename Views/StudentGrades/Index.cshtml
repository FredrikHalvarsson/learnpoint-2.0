@model IEnumerable<learnpoint_2._0.Models.StudentGrade>

@{
    ViewData["Title"] = "Index";
}

<h1>Grades</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Grade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GradingTeacher)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Grade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course.CourseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student.StudentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GradingTeacher.TeacherName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.StudentGradeId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.StudentGradeId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.StudentGradeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
