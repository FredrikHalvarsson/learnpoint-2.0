@model learnpoint_2._0.Models.SchoolClass

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>SchoolClass</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ClassTitle)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ClassTitle)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ClassSuperintendent)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ClassSuperintendent.TeacherName)
        </dd>
        <dt class="col-sm-2">Students</dt>
        <dd class="col-sm-10">
        @foreach(var student in Model.Students)
        {
            <p>@student.StudentName</p>
        }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.SchoolClassId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
